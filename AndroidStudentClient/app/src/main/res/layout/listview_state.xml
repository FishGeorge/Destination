<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/record_distance"
        android:layout_width="350dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:text="@string/app_name"
        android:textColor="@color/Black"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/record_time"
        android:layout_width="200dp"
        android:layout_height="27dp"
        android:text="@string/app_name"
        android:textColor="@color/LightGray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_distance" />

    <TextView
        android:id="@+id/record_location"
        android:layout_width="150dp"
        android:layout_height="27dp"
        android:text="TextView"
        android:textColor="@color/LightGray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/record_time"
        app:layout_constraintTop_toTopOf="@+id/record_time" />

</android.support.constraint.ConstraintLayout>