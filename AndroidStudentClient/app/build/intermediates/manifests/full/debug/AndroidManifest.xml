<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seuse16.destination"
    android:versionCode="1"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/FullScreenStyle" >
        <activity android:name="com.seuse16.destination.InitialActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seuse16.destination.LoginActivity"
            android:theme="@style/FullScreenStyle" />
        <activity
            android:name="com.seuse16.destination.RunningActivity"
            android:theme="@style/FullScreenStyle" />
        <activity
            android:name="com.seuse16.destination.RegisterActivity"
            android:theme="@style/FullScreenStyle" />
        <activity
            android:name="com.seuse16.destination.SettingActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.seuse16.destination.MainActivity"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>